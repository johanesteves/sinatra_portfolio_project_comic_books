<div class="page-header">
  <ul class="pager">
    <li class = "previous"><a href="/authors/<%=@author.id%>">Back</a> <h3 class = "text-left"style="display: inline">Editing <%=@author.name%></h3></li>
  </ul>
</div>

<form action="/authors/<%=@author.id%>" method="post" id="update" class = "form-horizontal">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <div class="form-group">
    <label for="Name" class="control-label col-sm-5"> Author Name:</label>
    <div class="col-sm-3">
      <input type="text"  class="form-control" name = "author[name]" id ="author_name" value="<%=@author.name%>" required>
    </div>
  </div>
</form>

<form action="/authors/<%=@author.id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">

  <div class="form-group"> <!-- Submit Button -->
    <div class="col-sm-10 col-sm-offset-5">
      <input type="submit" value = "Update" class="btn btn-primary btn-md" form="update">
      <button type="button" class="btn btn-danger btn-md" data-toggle="modal" data-target="#myModal">&nbsp;Delete&nbsp;</button>
    </div>
  </div>

  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">

      <div class="modal-content">
        <div class="modal-body">
          <a href="#" class="close" aria-label="close" data-dismiss="modal"> &times;</a>
          <p><strong>Are you sure you wish to delete? </strong></p>
          <body><em>This will remove associated comicbooks & issues</em></body>
        </div>
        <div class="modal-footer">
          <input type="submit" class="btn btn-danger btn-block" name="delete" id ="delete" value = "Delete">

        </div>
      </div>

    </div>
  </div>

</form>
