<div class="page-header">
  <ul class="pager">
    <li class = "previous"><a href="/authors">Back</a> <h3 style="display: inline">Add Author</h3></li>
  </ul>
</div>
<form action="/authors" method="post" class = "form-horizontal" enctype='multipart/form-data'>
  <div class="form-group">
    <div class="form-group" >
      <label for="Name" class="control-label col-sm-5"> Author Name:</label>
      <div class="col-sm-3">
        <input type="text"  class="form-control" name = "author_name" id ="author_name" placeholder="Full name..." required autofocus>
      </div>
      <button type= "button" data-toggle="collapse" class="btn btn-default" data-target="#issue_form">Add Issue?</button>

    </div>


    <div id = "issue_form" class = "collapse">

      <div class="form-group">
        <label for="comcibook_details" class="col-sm-10 col-sm-offset-5"><h4>Comicbook Details</h4></label>
      </div>

      <div class="form-group" >
        <label for="comicbook_title" class="control-label col-sm-5">Comicbook Title:</label>
        <div class = "col-sm-3">
          <input list="comicbooks" name="comicbook_title" placeholder="New or Existing" size="25"  autocomplete="off">
          <datalist id="comicbooks">
            <%Comicbook.all.each do |comicbook| %>
                <option value = "<%=comicbook.title%>" id = "<%=comicbook.id%>" name = "comicbook_title">  </option>
            <% end %>
          </datalist>
        </div>
      </div>


      <div class="form-group">
        <label for="issue_details" class="col-sm-10 col-sm-offset-5"><h4>Issue Details</h4></label>
      </div>

      <div class="form-group" >
        <label for="issue_number" class="control-label col-sm-5">Issue #:</label>
        <div class = "col-sm-2">
          <input type="number" class="form-control" name = "issue[issue_number]" id ="issue_number" placeholder="Issue #" min = "0" max ="100000">
        </div>
      </div>

      <div class="form-group">
        <label for="issue_title" class="control-label col-sm-5">Issue Title:</label>
        <div class = "col-sm-3">
          <input type="text" class="form-control" name = "issue[title]" id ="issue_title" placeholder="Title...">
        </div>
      </div>
      <div class="form-group">
        <label for="issue_cover_date" class="control-label col-sm-5">Issue Cover Date:</label>
        <div class = "col-sm-3">
          <input type="text" class="form-control" name = "issue[cover_date]" id ="cover_date" placeholder="Cover Date...">
        </div>
      </div>
      <div class="form-group">
        <label for="upload" class="control-label col-sm-5">Issue Cover Image:</label>
        <div class = "col-sm-3">
          <input type="file" id="file" class="custom-file-input">
        </div>
      </div>
    </div>
    <div class="form-group"> <!-- Submit Button -->
      <div class="col-sm-10 col-sm-offset-5">
        <input type="submit" class="btn btn-primary" value="Submit">
      </div>
    </div>
  </div>


</form>
