<div class="page-header">
  <ul class="pager">
    <li class = "previous"><a href="/authors">Back</a> <h3 style="display: inline"><%=@author.name%> <br><small>Submitted by <strong><%=current_user.authors.find_by_id(@author.id) ? "you" : @author.user.username%></strong></small></h3></li>
  </ul>
</div>

<div class="container control-label c-wrapper">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <% @author.comicbooks.each_with_index do |comicbook, index| %>

            <div class="item <%='active' if index == 0%> ">
              <a href="/comicbooks/<%=comicbook.id%>">
              <% if filename = Dir["public/#{comicbook.id}*"].first %>
                  <img src="/<%=filename.split("/")[-1]%>" alt="<%=comicbook.title%>"  style="height: 375px; width: 295px">
              <% else %>
                  <img src="/nocover.jpg" style="height: 365px; width: 295px">
                  <div class="carousel-caption">
                    <h3 style="color:dimgray;"><%=comicbook.title%></h3>
                  </div>
              <%end%>
              </a>
            </div>
        <% end %>
    </div>

    <!-- Left and right controls -->
    <%if @author.comicbooks.count > 1 %>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    <%end%>

  </div>
</div>