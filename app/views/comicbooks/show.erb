<a href="/comicbooks">View All</a> <br><br>

<% if @filename.blank? %>
    <img src="/nocover.jpg" height="400" width="260" align="left" hspace=10px>
<%else%>
    <img class="" src="/<%=@filename%>" alt="<%=@comicbook.title%>" height="400" width="260" align="left" hspace=10px>
<%end%>

<h3><%=@comicbook.title%> <small class="text-muted"><%= "by " + @comicbook.author.name if @comicbook.author%> </small> </h3>
<i>Submitted by <%=current_user && current_user.comicbooks.find_by_id(@comicbook.id) ? "you" : @comicbook.user.username%></i>

<% if current_user && current_user.comicbooks.find_by_id(@comicbook.id) %>
    <a href="/comicbooks/<%=@comicbook.id%>/edit"><input type="button" value="Edit"></a>
<% end %>

<br><br> <b>Issues</b>
<ul style="list-style: none;">
<% @comicbook.issues.each do |issue| %>
    <li><a href="/issues/<%=issue.id%>" style="text-decoration:none"><%=issue.title%></a></li>
<% end %>

</ul>